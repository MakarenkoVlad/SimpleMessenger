<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackround"
    tools:context=".AccountInfoActivity">

    <EditText
        android:id="@+id/account_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/account_surname_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="Surname"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/account_name_text_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/account_name_text_view"
        app:layout_constraintTop_toBottomOf="@+id/account_name_text_view" />

    <Button
        android:id="@+id/push_data_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="#FFFFFF"
        android:text="Push data"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="@+id/account_surname_text_view"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/account_surname_text_view"
        app:layout_constraintTop_toBottomOf="@+id/account_surname_text_view" />

    <TextView
        android:id="@+id/data_pushed_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Data have been pushed"
        android:textColor="#FF0000"
        app:layout_constraintEnd_toEndOf="@+id/push_data_button"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="@+id/push_data_button"
        app:layout_constraintTop_toBottomOf="@+id/push_data_button" />

    <Button
        android:id="@+id/pick_picture_button"
        android:layout_width="138dp"
        android:layout_height="124dp"
        android:layout_marginBottom="144dp"
        android:background="#FFFFFF"
        android:text="Pick picture"
        app:layout_constraintBottom_toTopOf="@+id/account_name_text_view"
        app:layout_constraintEnd_toEndOf="@+id/account_name_text_view"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/account_name_text_view" />
</androidx.constraintlayout.widget.ConstraintLayout>