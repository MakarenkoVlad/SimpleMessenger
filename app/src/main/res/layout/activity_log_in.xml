<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackround"
    tools:context=".ui.auth.LogInActivity">

    <EditText
        android:id="@+id/email_log_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_text_view"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textPersonName"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.443" />

    <EditText
        android:id="@+id/password_log_in"
        android:background="@drawable/circle_text_view"
        android:padding="5dp"
        android:backgroundTint="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/email_log_in"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/email_log_in"
        app:layout_constraintTop_toBottomOf="@+id/email_log_in" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_text_view"
        android:padding="5dp"
        android:backgroundTint="#FFFFFF"
        android:layout_marginTop="40dp"
        android:id="@+id/log_in"
        android:text="Log In"
        app:layout_constraintEnd_toEndOf="@+id/password_log_in"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/password_log_in"
        app:layout_constraintTop_toBottomOf="@+id/password_log_in" />

    <TextView
        android:id="@+id/sign_up_log_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Sign up"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="@+id/log_in"
        app:layout_constraintStart_toStartOf="@+id/log_in"
        app:layout_constraintTop_toBottomOf="@+id/log_in" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toTopOf="@+id/email_log_in"
        app:layout_constraintEnd_toEndOf="@+id/email_log_in"
        app:layout_constraintStart_toStartOf="@+id/email_log_in"
        app:srcCompat="@drawable/ic_message_black_24dp" />
</androidx.constraintlayout.widget.ConstraintLayout>